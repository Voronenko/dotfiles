#!/bin/bash

# Check for argument
if [ -z "$1" ]; then
  echo "Usage: $0 <port>"
  exit 1
fi

PORT="$1"

# Find PID of process listening on the port
PID=$(lsof -t -i :"$PORT")

if [ -z "$PID" ]; then
  echo "No process is listening on port $PORT"
  exit 0
fi

# Kill the process
echo "Killing process $PID listening on port $PORT..."
kill -9 "$PID"

echo "Done."
