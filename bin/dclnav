#!/bin/bash

docker-compose logs --no-color $@ | sed -r -e 's/\x1B\[([0-9]{1,2}(;[0-9]{1,2})?)?[m|K]//g' -e 's/([^|\s:]+)?\s+\|\s(.*)/\2,\1/' | lnav

