// Place your settings in this file to overwrite the default vscode settings
{
// telemetries
  "redhat.telemetry.enabled": false,
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,

  "editor.minimap.enabled": true,
  "editor.formatOnPaste": true,
  // Controls how the editor should render the current line highlight, possibilities are 'none', 'gutter', 'line', and 'all'.
  "editor.renderLineHighlight": "all",
  "python.venvPath": "./p-env, ~/.pyenv/versions/, ./venv",

  "kogito.bpmn.runOnSave": "extension.kogito.silentlyGenerateSvgBpmn",
  "kogito.dmn.runOnSave": "extension.kogito.silentlyGenerateSvgDmn",

// https://github.com/plantuml/plantuml-stdlib
  "plantuml.includepaths": [
    "/home/slavko/apps/plantuml/plantuml-stdlib/"
  ],

  "remote.SSH.defaultExtensions": [
    "alefragnani.numbered-bookmarks",
    "CoenraadS.bracket-pair-colorizer-2",
    "eamodio.gitlens",
    "EditorConfig.EditorConfig",
    "felixfbecker.php-debug",
    "felixfbecker.php-intellisense",
    "junstyle.php-cs-fixer",
    "neilbrayfield.php-docblocker",
    "mehedidracula.php-namespace-resolver",
    "humao.rest-client",
    "shardulm94.trailing-spaces",
    "waderyan.gitblame"
  ],

  "remote.containers.defaultExtensions": [
    "alefragnani.numbered-bookmarks",
    "CoenraadS.bracket-pair-colorizer-2",
    "eamodio.gitlens",
    "EditorConfig.EditorConfig",
    "felixfbecker.php-debug",
    "felixfbecker.php-intellisense",
    "mehedidracula.php-namespace-resolver",
    "junstyle.php-cs-fixer",
    "neilbrayfield.php-docblocker",
    "shardulm94.trailing-spaces",
    "waderyan.gitblame"
  ],

  "workbench.editorAssociations": {
      "*.copilotmd": "vscode.markdown.preview.editor",
      "file:/**/*.csv": "jupyter-data-wrangler"
  },

  "jsonnet.outputFormat": "json",
  "jsonnet.libPaths": [
  "./vendor",
  "${workspaceFolder}/vendor",
  "${workspaceFolder}/jsonnet-libs",
  "${workspaceFolder}/vendor/github.com/grafana",
  "${workspaceFolder}/tf/monitoring-box/grafana/vendor/github.com/grafana",
  "/home/slavko/apps/jsonnet",
  ],
  "restructuredtext.sphinxBuildPath": "${workspaceRoot}/p-env/bin/sphinx-build -c ../../docs/conf.py",
  "editor.mouseWheelZoom": true,
  "terminal.integrated.rendererType": "dom",
  "plantuml.jar": "/home/slavko/dotfiles/bin/plantuml.jar",
  "gitlens.advanced.telemetry.enabled": false,
  "vsicons.dontShowNewVersionMessage": true,
  "aws.samcli.location": "/home/slavko/.local/bin/sam",
  "diffEditor.renderSideBySide": false,
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "plantuml.render": "Local",
  "plantuml.server": "https://plantuml.fiks.im/",
  "chronicler.ffmpeg-binary": "/usr/bin/ffmpeg",
  "plantuml.exportOutDir": "./",
  "remote.extensionKind": {

    "pub.name": [
      "ui"
    ]
  },
  "dotfiles.repository": "voronenko/dotfiles",
  "dotfiles.targetPath": "~/dotfiles",
  "remote.containers.dotfiles.repository": "voronenko/dotfiles",
  "remote.containers.dotfiles.installCommand": "~/dotfiles/init_simple.sh",
  "remote.containers.dotfiles.targetPath": "~/dotfiles",
  "go.formatTool": "goimports",

  "php.suggest.basic": false,
  "editor.quickSuggestions": { "comments": true },
  "editor.formatOnSaveTimeout": 5000,
  "intelephense.files.exclude": [
    "**/.git/**",
    "**/.svn/**",
    "**/.hg/**",
    "**/CVS/**",
    "**/.DS_Store/**",
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**/{Test,test,Tests,tests}/**/*Test.php"
  ],
  "indentRainbow.includedLanguages": [
    "yaml",
    "python"
  ],
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "bracket-pair-colorizer-2.depreciation-notice": false,
  "explorer.confirmDelete": false,
  "bracket-pair-colorizer-2.activeScopeCSS": [

    "borderStyle : solid",
    "borderWidth : 1px",
    "borderColor : {color}",
    "opacity: 0.5"
  ],
  "hediet.vscode-drawio.resizeImages": null,
  "editor.insertSpaces": false,
  "python.experiments.optInto": [],
  "terminal.integrated.defaultProfile.linux": "bash",
  "roo-cline.allowedCommands": [
    "git log",
    "git diff",
    "git show",
    "npm test",
    "npm install",
    "tsc"
  ],
  "kilo-code.allowedCommands": [
    "git log",
    "git diff",
    "git show",
    "npm test",
    "npm install",
    "tsc"
  ],
  "kilo-code.deniedCommands": [],
  "roo-cline.deniedCommands": [],
  "chat.instructionsFilesLocations": {
    ".github/instructions": true,
  },
  "claudeCode.preferredLocation": "panel",

}
